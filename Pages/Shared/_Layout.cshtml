<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DisenoCRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DisenoCRM.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" />
    <style>
        .image-container {
            position: relative;
            display: inline-block;
        }

        .center-button {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            .center-button i {
                margin-right: 5px;
            }
        .custom-img-size {
            height: 450px;
            object-fit: cover;
        }

        .image-caption {
            margin-top: -50px;
            color: black;
            font-size: 14px;
        }

        .portada {
            width:100%;
        }

    </style>
</head>
<body class="sidebar-mini layout-fixed">
    <nav class="main-header navbar navbar-expand navbar-white navbar-light" style="background-color: #3c8dbc; border-bottom: 1px solid #ddd;">
       
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-light" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>

            
        </ul>

        <ul class="navbar-nav ml-auto">
            <!--li class="nav-item mx-2">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li-->
        </ul>
    </nav>

    <div class="wrapper">
        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <a href="#" style="background-color: #3c8dbc;" class="brand-link">
                CRM
            </a>

            <div class="sidebar">
                <nav class="mt-2">

                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Registration/Index">
                                <i class="nav-icon fas fa-plus-square"></i>
                                <p>
                                    Registration
                                    <i class="fas fa-angle-right right"></i>
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Post-Sale
                                    <i class="fas fa-angle-right right"></i>
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Clients/Index">
                                <i class="nav-icon fas fa-table"></i>
                                <p>
                                    Clients
                                    <i class="fas fa-angle-right right"></i>
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Statistics
                                    <i class="right fas fa-angle-right"></i>
                                </p>
                            </a>
                        </li>

                    </ul>

                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            @RenderBody()
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - DisenoCRM - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
